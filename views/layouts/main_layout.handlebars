<!doctype html>
<html>
<head>
	<title>Surf New England</title>
	<link rel='stylesheet' href='/stylesheets/bootstrap.css' />
	<link rel='stylesheet' href='/stylesheets/main.css' />
	<link rel="stylesheet" href="/javascripts/leaflet/leaflet.css" />
	<script src="/javascripts/jquery-3.1.1.min.js" type="text/javascript"></script>
	<script src="/javascripts/clickActions.js" type="text/javascript"></script>
	<script src="/javascripts/leaflet/leaflet.js"></script>
</head>

<body>

	<div class="container">

		<header class="row">
			<div class="pull-left">
				<a href="/"><h1>SurfNE</h1></a>

				{{#if user}}
					<span class="header-link">Logged in as {{user.userName}}</span> <br>
					<a class="header-link" href="/logout">Log Out</a>
				{{else}}
					<a class="header-link" href="/createAccount">Create Account</a> <br>
					<a class="header-link" href="/login">Log In</a>
				{{/if}}
			</div>
			<div class="pull-right">
				<a href="/">
					<img src="/images/surfsnow2.png" alt="surfer">
				</a>
			</div>
		</header>

		<div class="row">
			<h2>{{title}}</h2>
		</div>

		<div class="row">
			{{{body}}}
		</div>

	</div>

</body>

</html>
